<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RoutineIntermedioFragment">
    <LinearLayout
        android:id="@+id/nombreRutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/detallesRutina"
        android:background="@color/grey_components"
        android:paddingVertical="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rutina para Intermedios"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/detallesRutina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nombreRutina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:background="@color/grey_components">
        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/orange_icons"
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="13dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duracion:"
                    android:layout_gravity="center"
                    android:textColor="@color/white">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hrs y 20 min"
                    android:layout_gravity="center"
                    android:textColor="@color/white">

                </TextView>
                <ImageView
                    android:layout_marginTop="14dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_time"
                    android:layout_gravity="center">
                </ImageView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:backgroundTint="@color/orange_icons"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="13dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calorias a quemar:"
                    android:lines="2"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 kcal"
                    android:layout_gravity="center"
                    android:textColor="@color/white">
                </TextView>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_calories"
                    android:layout_gravity="center">
                </ImageView>



            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="160dp"
            android:backgroundTint="@color/orange_icons"
            android:layout_marginHorizontal="3dp"
            app:cardCornerRadius="13dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso recomendado:"
                    android:lines="2"
                    android:textColor="@color/white"
                    android:textAlignment="center">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10-20 kg"

                    android:layout_gravity="center"
                    android:textColor="@color/white">

                </TextView>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_exercise"
                    android:layout_gravity="center">
                </ImageView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/textLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detallesRutina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Listas de ejercicios"
        android:layout_marginTop="40dp"
        android:textAlignment="center">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listRutinaEjer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textLista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="10dp">

    </androidx.recyclerview.widget.RecyclerView>



</androidx.constraintlayout.widget.ConstraintLayout>