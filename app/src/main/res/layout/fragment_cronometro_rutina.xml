<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CronometroRutinaFragment">

    <TextView

        android:id="@+id/textCrono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/titleRealizar"
        android:textSize="25sp"
        android:textAlignment="center"
        android:paddingVertical="10dp">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciEjerRunC"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@+id/textCrono"
        android:layout_marginStart="15dp">

    </androidx.recyclerview.widget.RecyclerView>


    <ProgressBar
        android:id="@+id/pbCount"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/reciEjerRunC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pbTimer"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:rotation="-90"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:background="@drawable/toggle_bar_orange"
        android:progressDrawable="@drawable/gray_progress_bar">

    </ProgressBar>


    <Chronometer
        android:id="@+id/cronometro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingVertical="75dp"
        app:layout_constraintTop_toBottomOf="@+id/reciEjerRunC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/pbCount"
        android:textColor="@color/orange_icons"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large">

    </Chronometer>
    <TextView
        android:id="@+id/txtCroRu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cronometroRutina"
        app:layout_constraintTop_toBottomOf="@+id/pbCount"
        app:layout_constraintEnd_toStartOf="@+id/txtCroDes"
        app:layout_constraintStart_toStartOf="parent"
        >

    </TextView>

    <TextView
        android:id="@+id/txtCroDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pbTimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCroRu"
        android:text="@string/cronometroDescanso">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnCronometro"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="@string/StartRutina"
        android:background="@drawable/btn_desing"
        app:layout_constraintTop_toBottomOf="@+id/txtCroDes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="10dp"
        android:textColor="@color/background_app">

    </androidx.appcompat.widget.AppCompatButton>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTerminar"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCronometro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/endRutina"
        android:backgroundTint="@color/grey_low"
        android:textColor="@color/background_app"
        android:background="@drawable/btn_desing_grey"
        android:layout_marginTop="15dp"
        >

    </androidx.appcompat.widget.AppCompatButton>

    <ProgressBar
        android:id="@+id/pbTimer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/reciEjerRunC"
        app:layout_constraintStart_toEndOf="@+id/pbCount"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:rotation="-90"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:background="@drawable/gray_progress_bar"
        android:progressDrawable="@drawable/toggle_bar_orange">
    </ProgressBar>

    <Chronometer
        android:id="@+id/desCrono"
        android:paddingVertical="75dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/reciEjerRunC"
        app:layout_constraintStart_toStartOf="@+id/pbTimer"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColor="@color/grey_low"
        android:textSize="25sp"
        android:gravity="center">
        </Chronometer>



    </androidx.constraintlayout.widget.ConstraintLayout>