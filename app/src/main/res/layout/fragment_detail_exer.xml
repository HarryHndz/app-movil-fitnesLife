<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DetailExerFragment">
    <ImageView
        android:id="@+id/imagenEjercicio"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/nombreEjer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imagenEjercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="ejercicio de brazo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nombreEjer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparacion">

        </TextView>
        <TextView
            android:id="@+id/preparacionEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="esta es la preparacion">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EjecuciÃ³n">

        </TextView>
        <TextView
            android:id="@+id/ejecucionEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="esta es la ejecucion">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles">
        </TextView>
        <TextView
            android:id="@+id/detallesEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="esto es el detalle">

        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>