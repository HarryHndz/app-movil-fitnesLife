<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.DetailExerFragment">
    <ImageView
        android:id="@+id/imagenEjercicio"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imagenEjercicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/nombreEjer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ejercicio de brazo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black">

        </View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/corner_view"
            android:text="Descripción"
            android:textAlignment="center"
            android:paddingTop="10sp"
            android:textColor="@color/white"
            android:layout_marginBottom="15dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparacion"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20dp">

        </TextView>
        <TextView
            android:id="@+id/preparacionEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="esta es la preparacion"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejecución"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20dp">

        </TextView>
        <TextView
            android:id="@+id/ejecucionEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="esta es la ejecucion"
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="20dp">
        </TextView>
        <TextView
            android:id="@+id/detallesEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="esto es el detalle"
            android:textSize="15dp">

        </TextView>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eliminar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>