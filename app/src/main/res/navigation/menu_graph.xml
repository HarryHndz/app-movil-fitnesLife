<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_graph"
    app:startDestination="@id/navInicio">

    <fragment
        android:id="@+id/navEjercicios"
        android:name="com.harry.fitneslife.fragments.EjercicioFragment"
        android:label="fragment_ejercicio"
        tools:layout="@layout/fragment_ejercicio" >
        <action
            android:id="@+id/action_navEjercicios_to_detailExerFragment"
            app:destination="@id/detailExerFragment" />
    </fragment>
    <fragment
        android:id="@+id/navRutinas"
        android:name="com.harry.fitneslife.fragments.RutinaFragment"
        android:label=""
        tools:layout="@layout/fragment_rutina">

        <action
            android:id="@+id/action_navRutinas_to_rutinaPersonalizadaFragment"
            app:destination="@id/rutinaPersonalizadaFragment" />
        <action
            android:id="@+id/action_navRutinas_to_routineAvanzadoFragment"
            app:destination="@id/routineAvanzado" />
        <action
            android:id="@+id/action_navRutinas_to_routineIntermedioFragment"
            app:destination="@id/routineIntermedio" />
        <action
            android:id="@+id/action_navRutinas_to_routinePrincipianteFragment"
            app:destination="@id/routinePrincipiante" />
    </fragment>
    <fragment
        android:id="@+id/navInicio"
        android:name="com.harry.fitneslife.fragments.HomeFragment"
        android:label=""
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navInicio_to_navRutinas"
            app:destination="@id/navRutinas" />
        <action
            android:id="@+id/action_navInicio_to_navEjercicios"
            app:destination="@id/navEjercicios" />
        <action
            android:id="@+id/action_navInicio_to_navCuerpo"
            app:destination="@id/navCuerpo" />
        <action
            android:id="@+id/action_navInicio_to_navCuenta"
            app:destination="@+id/navCuenta" />
    </fragment>
    <fragment
        android:id="@+id/navCuerpo"
        android:name="com.harry.fitneslife.fragments.BodyFragment"
        android:label=""
        tools:layout="@layout/fragment_body" />
    <fragment
        android:id="@+id/navCuenta"
        android:name="com.harry.fitneslife.fragments.CountFragment"
        android:label=""
        tools:layout="@layout/fragment_count" />
    <fragment
        android:id="@+id/detailExerFragment"
        android:name="com.harry.fitneslife.fragments.DetailExerFragment"
        android:label=""
        tools:layout="@layout/fragment_detail_exer" >
        <argument
            android:name="nombreEjer"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/routineAvanzado"
        android:name="com.harry.fitneslife.fragments.RoutineAvanzadoFragment"
        android:label=""
        tools:layout="@layout/fragment_routine_avanzado" />
    <fragment
        android:id="@+id/routineIntermedio"
        android:name="com.harry.fitneslife.fragments.RoutineIntermedioFragment"
        android:label=""
        tools:layout="@layout/fragment_routine_intermedio" />
    <fragment
        android:id="@+id/routinePrincipiante"
        android:name="com.harry.fitneslife.fragments.RoutinePrincipianteFragment"
        android:label=""
        tools:layout="@layout/fragment_routine_principiante" />
    <fragment
        android:id="@+id/actionRutinaPer"
        android:name="com.harry.fitneslife.fragments.ActionRutinaPer"
        android:label=""
        tools:layout="@layout/fragment_action_rutina_per">
        <argument
            android:name="nombreEjer"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/cronometroRutinaFragment"
        android:name="com.harry.fitneslife.fragments.CronometroRutinaFragment"
        android:label="fragment_cronometro_rutina"
        tools:layout="@layout/fragment_cronometro_rutina" />
</navigation>